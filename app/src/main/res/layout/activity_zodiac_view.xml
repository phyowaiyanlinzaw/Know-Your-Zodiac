<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/main_background_color"
    tools:context=".ZodiacViewActivity">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/zodiac_signs_images"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        tools:src="@drawable/aries"
        android:contentDescription="@string/zodiac_image" />

    <TextView
        android:id="@+id/zodiac_signs_names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/secondary_color"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:text="ARIES" />

    <TextView
        android:id="@+id/zodiac_signs_dates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/primary_color"
        android:textSize="20sp"
        android:textStyle="italic"
        tools:text="March 21â€“April 19" />

    <Button
        android:id="@+id/basic_reading_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:backgroundTint="@color/secondary_color"
        tools:text="@string/get_basic_reading"
        android:textColor="@color/main_background_color" />
    </LinearLayout>

</ScrollView>